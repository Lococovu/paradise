    return "&9♢ &fИмя персонажа", "&7▷ &fНажмите, что бы поменять"
  else if {_id} is "age":
    return "&9⁰ &fВозраст персонажа", "&7▷ &fНажмите, что бы поменять"
  else if {_id} is "gender":
    return "&9%%{_visual::gender::icon}%% &fПол персонажа", "&7▷ &fНажмите, что бы поменять"
  else if {_id} is "skin":
    return "&9❃ &fИгровой скин", "&7▷ &fНажмите, что бы поменять"
  else if {_id} is "character":
    return ""